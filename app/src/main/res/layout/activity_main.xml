<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            // A TEAM
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Team"
                android:textSize="25dp" />

            // A팀 점수판
            <TextView
                android:id="@+id/aTeamTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="100dp" />

            // A팀 3점
            <Button
                android:textStyle="bold"
                android:id="@+id/aPlus3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#e68f34"
                android:onClick="aSubmitScore"
                android:text="+3 POINT" />
            // A팀 2점
            <Button
                android:textStyle="bold"
                android:id="@+id/aPlus2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#e68f34"
                android:onClick="aSubmitScore"
                android:text="+2 POINT" />

            // A팀 1점
            <Button
                android:textStyle="bold"
                android:id="@+id/aTeamFreeThrow"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#e68f34"
                android:onClick="aSubmitScore"
                android:text="FREE THROW" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            //B TEAM
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B Team"
                android:textSize="25dp" />

            // B팀 점수판
            <TextView
                android:id="@+id/bTeamTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="100dp" />

            // B팀 3점!
            <Button
                android:textStyle="bold"
                android:id="@+id/bPlus3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="#e68f34"
                android:onClick="bSubmitScore"
                android:text="+3 POINT" />

            // B팀 2점
            <Button
                android:textStyle="bold"
                android:id="@+id/bPlus2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#e68f34"
                android:onClick="bSubmitScore"
                android:text="+2 POINT" />

            // B팀 1점
            <Button
                android:textStyle="bold"
                android:id="@+id/bTeamFreeThrow"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#e68f34"
                android:onClick="bSubmitScore"
                android:text="FREE THROW" />

        </LinearLayout>

    </LinearLayout>

    //리셋버튼
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#e68f34"
        android:onClick="submitReset"
        android:text="RESET"
        android:textSize="25dp" />


</RelativeLayout>
